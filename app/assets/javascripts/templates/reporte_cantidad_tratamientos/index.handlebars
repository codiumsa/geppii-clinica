<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "search" on="submit"}}>

          <div class="form-group">
            <div class="col-lg-4">
              <label class="form-label">Paciente</label>
              <div class="search-input-width">
              {{search-input type="text"
              value=infoPaciente
              selectedItem=pacienteSeleccionado
              class="form-control"
              placeholder="Nombre, Apellido, RUC o Num de Paciente"
              property="infoPaciente"
              session=session service="pacientes"
              modelType="paciente"
              jsonRoot="pacientes"
              store=store
              ignoredProperties="persona,candidaturas"
              queryScope="by_persona"}}
              </div>
            </div>
            <div class="col-lg-4">
              <label class="form-label">Especialidad Médica</label>
              <div class="search-input-width">
              {{search-input type="text"
              value=infoEspecialidad
              selectedItem=especialidadSeleccionada
              class="form-control"
              placeholder="Especialidad Médica"
              property="descripcion"
              session=session service="especialidades"
              modelType="especialidad"
              jsonRoot="especialidades"
              store=store
              queryScope="by_descripcion"}}
              </div>
            </div>


          </div>
            <label class="form-label" for="fecha">Rango de fechas</label>
              <div class="form-group">
                <div class="col-md-4">
                  {{view Bodega.views.DatePickerView value=fecha_inicio_despues nullable=true placeholder="Después de"}}
                </div>
                <div class="col-md-4">
                  {{view Bodega.views.DatePickerView value=fecha_inicio_dia nullable=true placeholder="Día"}}
                </div>
                <div class="col-md-4"}>
                  {{view Bodega.views.DatePickerView value=fecha_inicio_antes nullable=true placeholder="Antes de" }}
                </div>
              </div>



          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Generar Reporte</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
