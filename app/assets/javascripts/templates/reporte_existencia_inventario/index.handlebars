<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "search" on="submit"}}>
          <div class="form-group">
            <div class="col-lg-7">
                <label class="form-label" for="inventarios">Depósito</label>
                <div class="search-input-width">
                {{search-input type="text"
                value=nombre
                selectedItem=depositoSeleccionado
                class="form-control"
                placeholder="Nombre del Depósito"
                property="descripcion"
                session=session service="depositos"
                modelType="deposito"
                jsonRoot="depositos"
                store=store
                ignoredProperties="inventario"
                queryScope="by_nombre"}}
                </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Generar Reporte</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
