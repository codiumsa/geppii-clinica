<h3>
  <i class="fa fa-angle-right"></i>
  Inventarios
  {{#link-to 'inventarios.new'}}
    <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
  {{/link-to}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="content-panel table-responsive" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Nombre</th>
                  <th>Descripcion</th>
                  <th>Fecha Inicio</th>
                  <th>Fecha Fin</th>
                  <th>Procesado</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{nombre}}</td>
                  <td>{{descripcion}}</td>
                  <td>{{dateformat fechaInicio}}</td>
                  <td>{{dateformat fechaFin}}</td>
                  <td>{{yesno procesado}}</td>
                  <td class="center">
                    {{#link-to 'inventario.edit' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil"></button>
                    {{/link-to}}
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>
