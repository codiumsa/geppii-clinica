<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "save" on="submit"}} onkeydown="Bodega.keydownFormHandler('controller:sesionCajas.new', 'save');">
          <div class="form-group">

            <div class="col-lg-2">
              <label class="form-label"  for="fecha">Fecha</label>
              {{view Bodega.views.DatePickerView value=fecha disabled=isEditable}} 
            </div>

            <div class="col-lg-6" {{bind-attr class="errors.deposito:has-error errors.deposito:has-feedback"}}>
              <label class="form-label">Dep贸sito</label>
              {{view Ember.Select
               content=depositos
               optionLabelPath="content.nombre"
               selection=depositoDefault
               value=depositoDefault
               classNames="form-control"
               disabled=isEditable
              }}
              <span class="help-block">{{error errors.deposito}}</span>
              {{#if errors.deposito}}
              <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              {{/if}}
            </div>

            <div class="col-lg-4" {{bind-attr class="errors.estado:has-error errors.estado:has-feedback"}}>
              <label class="form-label"  for="estado">Estado</label>
              {{input type="text" value=estado class="form-control" placeholder="Estado" readonly=true}}
              <span class="help-block">{{error errors.estado}}</span>
              {{#if errors.estado}}
              <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              {{/if}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-5" {{bind-attr class="errors.proceso:has-error errors.proceso:has-feedback"}}>
              <label class="form-label">Proceso de producci贸n</label>
              {{view Ember.Select
               content=procesos
               optionLabelPath="content.descripcion"
               selection=procesoDefault
               value=procesoDefault
               classNames="form-control"
               disabled=isEditable}}
               <span class="help-block">{{error errors.proceso}}</span>
              {{#if errors.proceso}}
              <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              {{/if}}
            </div>
            

            <div class="col-lg-5" {{bind-attr class="errors.descripcionProducto:has-error errors.descripcionProducto:has-feedback"}}>
              <label class="form-label"  for="descripcionProducto">Producto</label>
              {{input type="text" value=descripcionProducto class="form-control" placeholder="Producto" readonly=true}}
            </div>

            <div class="col-lg-2" {{bind-attr class="errors.cantidad:has-error errors.cantidad:has-feedback"}}>
              <label class="form-label"  for="cantidad">Cantidad Producida</label>
              {{number-input value=cantidad class="form-control" readonly=isTerminado min="1"}}
              <span class="help-block">{{error errors.cantidad}}</span>
              {{#if errors.cantidad}}
              <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              {{/if}}
            </div>

          </div>
          <div class="form-group">
            <div class="col-lg-12" {{bind-attr class="errors.observacion:has-error errors.observacion:has-feedback"}}>
              <label class="form-label"  for="observacion">Observaci贸n</label>
              {{textarea type="text" value=observacion class="form-control" placeholder="Observaci贸n"}}
              <span class="help-block">{{error errors.observacion}}</span>
              {{#if errors.observacion}}
              <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              {{/if}}
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme"{{bind-attr disabled = feedback.conErrores}}>Guardar</button>
              <button {{action 'cancel'}} class="btn btn-default">Cancelar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
