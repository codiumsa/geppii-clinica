<h3>
  <i class="fa fa-angle-right"></i>
  Oportunidades con Patrocinadores
  {{#isAuthorized 'FE_post_sponsors'}}
    {{#link-to 'tipoContactos.new'}}
      <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
    {{/link-to}}
  {{/isAuthorized}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="table-responsive content-panel" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Código</th>
                  <th>Descripción</th>
                  <th>Ref. a</th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{codigo}}</td>
                  <td>{{descripcion}}</td>
                  {{#if conCampanha}}
                    <td>Campaña</td>
                  {{else}}
                    {{#if conMision}}
                      <td>Misión</td>
                    {{else}}
                      <td>Clínica</td>
                    {{/if}}
                  {{/if}}
                  <td class="center">
                    {{#link-to 'tipoContacto.edit' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil">
                      </button>
                    {{/link-to}}
                    {{#link-to 'tipoContacto.delete' this classNames='table-action'}}
                      {{#isAuthorized 'FE_delete_proveedores'}}
                        <button class="btn btn-theme btn-sm glyphicon glyphicon-remove"
                          data-toggle="modal" data-target="#tipoContactoDelete">
                        </button>
                      {{/isAuthorized}}
                    {{/link-to}}
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>
