<h3>
  <i class="fa fa-angle-right"></i>
  Voluntario
  {{#link-to 'colaboradores.new'}}
    <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
  {{/link-to}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="content-panel table-responsive" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>CI</th>
                  <th>Nombre</th>
                  {{!-- <th>Voluntario</th> --}}
                  <th>Tipo</th>
                  <th>Especialidad</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{persona.ciRuc}}</td>
                  <td>{{persona.razonSocialIndex}}</td>
                  {{!-- <td>{{yesno voluntario}}</td> --}}
                  <td>{{tipoColaborador.nombre}}</td>
                  <td>{{especialidad.descripcion}}</td>
                  <td class="center">
                    {{#link-to 'colaborador.edit' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil"></button>
                    {{/link-to}}
                    {{#link-to 'colaborador.delete' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-remove"
                              data-toggle="modal" data-target="#colaboradorDelete"></button>
                    {{/link-to}}
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>
