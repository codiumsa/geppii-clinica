<div class="modal fade" id="sponsorSearchForm">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" {{action "noop"}} data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Filtros</h4>
      </div>
      <div class="modal-body">
        <div class="form-horizontal">
          <form class="style-form" role="form">
            <div class="form-group">
              <div class="col-lg-6">
                <label class="form-label" for="razonSocial">Nombre o Raz&oacute;n Social</label>
                {{input type="text" value=by_razon_social class="form-control" placeholder="Nombre o Razón Social"}}
              </div>
              <div class="col-lg-6">
                <label class="form-label" for="sexo">Sexo</label>
                {{view Ember.Select content=sexos selection=by_sexo value=by_sexo prompt="Seleccione un valor..." classNames="form-control"}}
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-3">
                <label class="form-label" for="ruc">RUC/CI</label>
                {{input type="text" value=by_ciRuc class="form-control" placeholder="RUC/CI"}}
              </div>
              <div class="col-lg-3">
                <label class="form-label" for="tipopersona">Tipo persona</label>
                {{view Ember.Select content=tipoPersonas selection=by_tipo_persona value=by_tipo_persona prompt="Seleccione un valor..." classNames="form-control"}}
              </div>
            </div>
            <label class="form-label">Días de atraso</label>
            <div class="form-group">
              <div class="col-lg-4" }}>
                {{number-input type="text" value=by_dias_atraso_gt class="form-control" placeholder="Desde"}}
              </div>
              <div class="col-lg-4">
                {{number-input type="text" value=by_dias_atraso_eq class="form-control" placeholder="Igual a"}}
              </div>
              <div class="col-lg-4">
                {{number-input type="text" value=by_dias_atraso_lt class="form-control" placeholder="Hasta"}}
              </div>
            </div>
            <label class="form-label" for="fecha">Fecha de Nacimiento</label>
            <div class="form-group">
              <div class="col-lg-4">
                {{view Bodega.views.DatePickerView value=by_fecha_nacimiento_after placeholder="Desde"}}
              </div>
              <div class="col-lg-4">
                {{view Bodega.views.DatePickerView value=by_fecha_nacimiento_on placeholder="Día"}}
              </div>
              <div class="col-lg-4" }>
                {{view Bodega.views.DatePickerView value=by_fecha_nacimiento_before placeholder="Hasta" }}
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-4">
                <label class="form-label" for="estadoCivil">Estado Civil</label>
                {{view Ember.Select content=estadoCivilOpts selection=by_estado_civil prompt="Seleccione un valor..." value=by_estado_civil classNames="form-control"}}
              </div>
              <div class="col-lg-4">
                <label class="form-label" for="nacionalidad">Nacionalidad</label>
                {{input type="text" value=by_nacionalidad class="form-control" placeholder="Nacionalidad"}}
              </div>
            </div>
            
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" {{action "criteriaSearch"}} class="btn btn-theme codium-search-btn" data-dismiss="modal" autofocus>Buscar</button>
        <button type="button" {{action "clearFilters"}} class="btn btn-default" data-dismiss="modal">Limpiar Filtros</button>
        <button type="button" {{action "noop"}} class="btn btn-default codium-cancel-btn" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>