<div class="panel panel-default" style="margin-top: 15px;">
  <div class="panel-heading">
    <h4 class="panel-title">
    <a data-toggle="collapse" data-parent="#accordion" href="diagnosticos">
      <i class="fa fa-angle-right"></i>Diagnosticos</a>
  </h4>
  </div>

  <div id="diagnosticos" class="panel-collapse collapse in">
    <div class="panel-body">
      <label style="font-weight: bold;">Nuevo Diagnostico</label>

      <div class="form-panel">

        <div class="form-group">
          <div class="col-lg-2">
            <label for="tiposDiagnosticos">Parte</label>
            {{view Ember.Select content=tiposDiagnosticos selection=tipoDiagnosticoSeleccionado value=tipoDiagnosticoSeleccionado classNames="form-control" }}
          </div>
          <div class="col-lg-3">
            <label for="diagnosticos">Diagnóstico</label>
            {{view Ember.Select content=diagnosticos optionLabelPath="content.nombre" selection=diagnosticoSeleccionado value=diagnosticoSeleccionado classNames="form-control" }}
          </div>
          {{#if tieneResultadoSatisfactorio}}
            <div class="col-lg-1">
              <label class="form-label">Resultado satisfactorio</label>
              {{input type="checkbox" checked=resultadoSatisfactorio class="checkbox"}}
            </div>
          {{/if}}
          {{#if tieneObservacion}}
            <div class="col-lg-3">
              <label class="form-label">Observación</label>
              {{input type="text" value=observacionDiagnostico class="form-control" placeholder="Observación"}}
            </div>
          {{/if}}
          {{#if tieneLados}}
            <div class="col-lg-2">
              <label class="form-label">Lado</label>
              {{input type="text" value=ladoDiagnostico class="form-control" placeholder="Lado"}}
            </div>
          {{/if}}
          {{#unless agregarAbajo}}
            {{#if tieneLocalizacion}}
              <div class="col-lg-2">
                <label class="form-label">Localización</label>
                {{input type="text" value=localizacionDiagnostico class="form-control" placeholder="Localización"}}
              </div>
            {{/if}}
            <div class="col-lg-1">
              <button type="button" {{action 'agregarDiagnostico'}} class="btn btn-theme float-right" style="margin-top: 22px;" onkeydown="Bodega.enterFormHandler('controller:fichasCirugia.base', 'agregarDiagnostico');">
                <span class="glyphicon glyphicon-plus"></span>
              </button>
            </div>
          {{/unless}}
        </div>
        {{#if agregarAbajo}}
          {{#if tieneLocalizacion}}
            <div class="col-lg-2">
              <label class="form-label">Localización</label>
              {{input type="text" value=localizacionDiagnostico class="form-control" placeholder="Localización"}}
            </div>
          {{/if}}
          <div class="col-lg-1">
            <button type="button" {{action 'agregarDiagnostico'}} class="btn btn-theme float-right" style="margin-top: 22px;" onkeydown="Bodega.enterFormHandler('controller:fichasCirugia.base', 'agregarDiagnostico');">
              <span class="glyphicon glyphicon-plus"></span>
            </button>
          </div>
        {{/if}}
      </div>
      <br>
      <div class="row">
        <div class="col-md-12">
          <div class="content-panel">
            <h4>Diagnósticos</h4>
            <hr>
            <table class="table table-striped table-advance table-hover">
              <thead>
                <tr>
                  <th>Parte</th>
                  <th>Diagnóstico</th>
                  <th>Resultado Satisfactorio</th>
                  <th>Observación</th>
                  <th>Lado</th>
                  <th>Localización</th>
                </tr>
              </thead>
              <tbody>
                {{#each item in detallesDiagnosticos}}
                  <tr>
                    <td> {{item.tipo}} </td>
                    <td> {{item.nombre}} </td>
                    <td><span {{bind-attr class="item.satisfactorioClass"}}>
                    {{yesnonull item.resultadoSatisfactorio}} </span></td>
                    <td> {{item.observacion}} </td>
                    <td> {{item.lado}} </td>
                    <td> {{item.localizacion}}</td>
                    <td>
                      <button type="button" {{action 'borrarDetalleDiagnostico' item}} class="btn btn-danger btn-xs"> <span class="glyphicon glyphicon-remove"></span>
                      </button>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>