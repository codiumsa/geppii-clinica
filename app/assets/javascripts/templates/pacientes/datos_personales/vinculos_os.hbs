<div class="panel panel-default" style="margin-top: 15px;">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a data-toggle="collapse" data-parent="#accordion"
	 href="#vinculosConOS"><i class="fa fa-angle-right">
	 </i>Vinculos con Operaci&oacute;n Sonrisa</a>
    </h4>
  </div>
  <div id="vinculosConOS" class="panel-collapse collapse">
    <div class="panel-body">
      <div class="form-group">
          <br>
              <div class="row">
                <div class="col-md-12">
                  <div class="content-panel">
                    <h4>Misiones</h4>
                    <hr>
                    <table class="table table-striped table-advance table-hover">
                      <thead>
                        <tr>
                          <th>Nombre</th>
                          <th>Descripción</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each item in misionesVinculo}}
                          <tr>
                            <td> {{item.nombre}} </td>
                            <td> {{item.descripcion}} </td>
                          </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>


