      <div class="form-group">
        <div class="col-lg-4"
            {{bind-attr class="errors.personaTratamientoClinica:has-error 
              errors.personaTratamientoClinica:has-feedback"}}>
                <label class="form-label" for="personaTratamientoClinica">Sigue tratamiento en la Clinica?</label>
          Si {{view Bodega.views.RadioButton value='si' checked=vinculos.sigueTratamiento}}
          No {{view Bodega.views.RadioButton value='no' checked=vinculos.sigueTratamiento}}
                <span class="help-block">{{error errors.personaTratamientoClinica}}</span>
                {{#if errors.personaTratamientoClinica}}
                  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                {{/if}}
        </div>
        <div class="col-lg-4"
            {{bind-attr class="feedback.personaFechaPrimeraConsulta:has-error 
              feedback.personaFechaPrimeraConsulta:has-feedback"}}>
                <label class="form-label" for="personaFechaPrimeraConsulta">Fecha de Primera Consulta</label>
                {{view Bodega.views.DatePickerView value=vinculos.fechaPrimeraConsulta}}
                <span class="help-block">{{error feedback.personaFechaPrimeraConsulta}}</span>
                {{#if feedback.personaFechaPrimeraConsulta}}
                  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                {{/if}}
        </div>


