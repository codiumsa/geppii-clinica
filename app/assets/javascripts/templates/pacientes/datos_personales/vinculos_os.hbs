      <div class="form-group">
        <div class="col-lg-4">
          <label>Como se enter&oacute; de Operaci&oacute;n Sonrisa</label>
          {{view Ember.Select content=fuentesOpSonrisa prompt="Seleccione una fuente" selection=vinculos.comoSeEntero.fuente value=vinculos.comoSeEntero.fuente classNames="form-control" }}
