<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "save" on="submit"}} onkeydown="Bodega.keydownFormHandler('controller:cajas.new', 'save');">
          <div class="form-group">
            <div class="col-lg-4" {{bind-attr class="errors.codigo:has-error errors.codigo:has-feedback"}}>
              <label class="form-label"  for="codigo">C贸digo</label>
              {{focus-input type="text" value=codigo class="form-control" placeholder="C贸digo de la caja" autofocus="autofocus"}}
              <span class="help-block">{{error errors.codigo}}</span>
              {{#if errors.codigo}}
              <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              {{/if}}
            </div>
            <div class="col-lg-4" {{bind-attr class="errors.descripcion:has-error errors.descripcion:has-feedback"}}>
              <label class="form-label"  for="descripcion">Descripci贸n</label>
              {{input type="text" value=descripcion class="form-control" placeholder="Descripci贸n de la caja"}}
              <span class="help-block">{{error errors.descripcion}}</span>
              {{#if errors.descripcion}}
              <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              {{/if}}
            </div>
            {{#if sucursal}}
            <div class="col-lg-4">
              <label class="form-label">Sucursal</label>
              {{input type="text" value=sucursal.descripcion class="form-control" placeholder="Sucursal" readonly=true}}
            </div>
            {{/if}}
          </div>
          
{{!--           <div class="form-group">
             <div class="col-lg-4">
              <label class="form-label">Empresa</label>
              {{view Ember.Select 
                      content=empresas
                      optionValuePath="content.id" 
                      optionLabelPath="content.nombre" 
                      selection=empresaSeleccionada
                      value=empresaSeleccionada
                      classNames="form-control" }}
            </div>

          </div> --}}
          {{#unless sucursal}}
          <div class="form-group">
            <div class="col-lg-4">
              <label class="form-label">Tipo de Caja</label>
              {{view Ember.Select 
                      content=tiposCaja
                      optionValuePath="content.id" 
                      optionLabelPath="content.nombre" 
                      value=tipoDefault.id
                      selection=tipoSeleccionado
                      classNames="form-control" 
              }}
            </div>

            {{#if habilitaUsuarios}}
              <div class="col-lg-4">
                <label class="form-label">Usuarios</label>
                {{view Ember.Select 
                        content=usuarios
                        optionValuePath="content.id" 
                        optionLabelPath="content.nombre" 
                        selection=usuarioSeleccionado
                        value=usuarioDefault
                        classNames="form-control" }}
              </div>
            {{else}}
              {{#if usuario}}
                <div class="col-lg-4">
                  <label class="form-label">Usuario</label>
                  {{input type="text" value=usuario.nombre class="form-control" placeholder="Usuario" readonly=true}}
                </div>
              {{/if}}
            {{/if}}

          </div>
          {{/unless}}
          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Guardar</button>
              <button {{action 'cancel'}} class="btn btn-default">Cancelar</button>
            </div>
          </div>
        </form>
      </div> 
    </div>
  </div>
</div>
