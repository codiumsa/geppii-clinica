<h3>
  <i class="fa fa-angle-right"></i>
  Cajas
  {{#link-to 'cajas.new'}}
    <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
  {{/link-to}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="content-panel table-responsive" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Código</th>
                  <th>Descripción</th>
                  <th>Tipo</th>
                  <th>Abierta</th> 
                  {{#if muestraSaldo}}
                  <th>Saldo</th> 
                  {{/if}}   
                  <th style="width:11%;"></th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{codigo}}</td>
                  <td>{{descripcion}}</td>
                  <td>{{tipo}}</td>
                  <td>{{yesno abierta}}</td>
                  {{#if controller.muestraSaldo}}
                  <td>{{saldo}}</td>
                  {{/if}}   
                  
                  <td class="center">
                    
                    {{#link-to 'caja.edit' this classNames='table-action'}}
                      {{#isAuthorized 'FE_delete_cajas'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil"></button>
                      {{/isAuthorized}}
                    {{/link-to}}
                    
                    
                    {{#link-to 'caja.delete' this classNames='table-action'}}
                      {{#isAuthorized 'FE_delete_cajas'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-remove" 
                              data-toggle="modal" data-target="#cajaDelete"></button>
                      {{/isAuthorized}}
                    {{/link-to}}
                    
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>