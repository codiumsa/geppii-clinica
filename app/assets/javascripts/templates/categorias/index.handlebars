<h3>
  <i class="fa fa-angle-right"></i>
  Categorías
  {{#isAuthorized 'FE_post_categorias'}}
    {{#link-to 'categorias.new'}}
      <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
    {{/link-to}}
  {{/isAuthorized}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="table-responsive content-panel" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Nombre</th>
                  <th>Comisión</th>
                  <th style="width:11%;"></th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{nombre}}</td>
                  <td>{{comision}}</td>
                  <td class="center">
                      {{#link-to 'categoria.edit' this classNames='table-action'}}
                        <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil"></button>
                      {{/link-to}}
                      {{#link-to 'categoria.delete' this classNames='table-action'}}
                        <button class="btn btn-theme btn-sm glyphicon glyphicon-remove" 
                                data-toggle="modal" data-target="#categoriaDelete"></button>
                      {{/link-to}}
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>