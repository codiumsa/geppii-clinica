<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
      <form class="style-form" role="form" {{action "save" on="submit"}} onkeydown="Bodega.keydownFormHandler('controller:sesionCajas.new', 'save');">
          <div class="form-group">
            <div class="col-lg-3" {{bind-attr class="feedback.abierta:has-error feedback.abierta:has-feedback"}}>
              <label class="form-label">Operacion Caja</label>
              {{view Ember.Select
               content=operacionesCaja
               optionLabelPath="content.descripcion"
               selection=operacionCajaDefault
               value=operacionCajaDefault
               classNames="form-control"}}
            </div>
            <div class="col-lg-3">
              <label class="form-label"  for="fecha">Fecha</label>
              {{view Bodega.views.DatePickerView value=fecha}} 
            </div>
            <div class="col-lg-6" {{bind-attr class="errors.observacion:has-error errors.observacion:has-feedback"}}>
              <label class="form-label"  for="observacion">Observacion</label>
              {{input type="text" value=observacion class="form-control" placeholder="Observaci√≥n"}}
              <span class="help-block">{{error errors.observacion}}</span>
              {{#if errors.observacion}}
              <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              {{/if}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-4" {{bind-attr class="feedback.abierta:has-error feedback.abierta:has-feedback"}}>
              <label class="form-label">Caja</label>
              {{view Bodega.FocusSelect 
                content=cajas 
                selection=cajaDefault
                value=cajaDefault
                optionLabelPath="content.descripcion"
                classNames="form-control"}}
              <span class="help-block">{{feedback.abierta}}</span>
              {{#if feedback.abierta}}
                <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              {{/if}}
            </div>
            {{#if transferencia}}
              <div class="col-lg-4">
                <label class="form-label">Caja Destino</label>
                {{view Bodega.FocusSelect 
                  content=cajas
                  selection=cajaDefaultDestino
                  value=cajaDefaultDestino
                  optionLabelPath="content.descripcion"
                  classNames="form-control"}}
                  <span class="help-block">{{feedback.abierta2}}</span>
              </div>
            {{/if}}
            <div class="col-lg-4"  {{bind-attr class="feedback.saldo:has-error feedback.saldo:has-feedback"}} >
                <label class="form-label">Monto</label>
                {{number-input value=monto class="form-control" placeholder=numeral }}
                <span class="help-block">{{feedback.saldo}}</span>
                {{#if feedback.saldo}}
                <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                {{/if}}
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme"{{bind-attr disabled = feedback.conErrores}}>Guardar</button>
              <button {{action 'cancel'}} class="btn btn-default">Cancelar</button>
            </div>
          </div>
        </div> 
        </form>
      </div>
    </div>
  </div>
</div>
