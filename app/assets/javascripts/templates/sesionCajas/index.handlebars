<h3>
  <i class="fa fa-angle-right"></i>
  Movimientos de caja
  {{#link-to 'sesionCajas.new'}}
    <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
  {{/link-to}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="content-panel table-responsive" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Fecha</th>
                  <th>Operacion</th>
                  <th>Monto</th>
                  <th>Observacion</th>
                  <th>Caja</th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{dateformat fecha}}</td>
                  <td>{{operacionCaja.descripcion}}</td>
                  <td>{{monto}}</td>
                  <td>{{observacion}}</td>
                  <td>{{caja.descripcion}}</td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>