<h3>
  <i class="fa fa-angle-right"></i>
  Tipos de Crédito
  {{#link-to 'tipoCreditos.new'}}
    <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
  {{/link-to}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="table-responsive content-panel" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Descripción</th>
                  <th>Plazo</th>
                  <th style="width:18%;">Unidad de Tiempo</th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{descripcion}}</td>
                  <td>{{plazo}}</td>
                  <td>{{unidadTiempoFormateado}}</td>
                  <td class="center">
                    {{#link-to 'tipoCredito.edit' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil"></button>
                    {{/link-to}}
                    {{#link-to 'tipoCredito.delete' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-remove" 
                              data-toggle="modal" data-target="#tipoCreditoDelete"></button>
                    {{/link-to}}
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>