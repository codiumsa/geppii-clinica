<h3>
  <i class="fa fa-angle-right"></i>
  Patrocinador
  {{#link-to 'sponsors.new'}}
    <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
  {{/link-to}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="content-panel table-responsive" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>RUC</th>
                  <th>Razon Social</th>
                  <th>Tipo Patrocinador</th>
                  <th>Donado AÃ±o</th>
                  <th>Proyeccion</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{persona.ciRuc}}</td>
                  <td>{{persona.razonSocial}}</td>
                  <td>{{tipoSponsor}}</td>
                  <td>{{pagado}}</td>
                  <td>{{comprometido}}</td>
                  <td class="center">
                    {{#link-to 'sponsor.edit' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil"></button>
                    {{/link-to}}
                    {{#link-to 'sponsor.delete' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-remove"
                              data-toggle="modal" data-target="#sponsorDelete"></button>
                    {{/link-to}}
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>
