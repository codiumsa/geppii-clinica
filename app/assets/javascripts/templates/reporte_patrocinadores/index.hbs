<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>

<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "search" on="submit"}}>
            <div class="form-group">
                <div class="col-md-4">
                  <div class="search-input-width">
                    <label class="form-label" for="tipopersona">Campaña</label>
                    {{search-input type="text" value=campanhaLabel selectedItem=misionSeleccionada class="form-control" placeholder="Campaña" property="nombre" session=session service="campanhas" modelType="campanha" ignoredProperties="persona,tipoCampanha,campanhasColaboradores,misionesVinculo" jsonRoot="campanhas" store=store queryScope="by_nombre"}}
                  </div>
                </div>
                <div class="col-md-4">
                    <label class="form-label" for="tipopatrocinador">Tipo de patrocinador</label>
                    {{view Ember.Select content=tipoPatrocinadores selection=tipoPatrocinador value=tipoPatrocinador prompt="Seleccione un valor..." classNames="form-control"}}
                </div>
            </div>
          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Generar Reporte</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
