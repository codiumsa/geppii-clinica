<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "search" on="submit"}}>
          <label class="form-label" for="fecha">Fecha de Viaje</label>    
          <div class="form-group">
            <div class="col-md-4">
              {{view Bodega.views.DatePickerView value=fecha_despues nullable=true placeholder="Después de"}}
            </div>
            <div class="col-md-4">
              {{view Bodega.views.DatePickerView value=fecha_dia nullable=true placeholder="Día"}}
            </div>
            <div class="col-md-4"}>
              {{view Bodega.views.DatePickerView value=fecha_antes nullable=true placeholder="Antes de" }}
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-6">
              <label class="form-label">Voluntario</label>
              <div class="search-input-width">
              {{search-input id="colaborador" type="text" value=descripcionSW queryScope="by_persona" selectedItem=colaboradorSeleccionado class="form-control" placeholder="Voluntario" property="razonSocial" session=session service="colaboradores" modelType="colaborador" jsonRoot="colaboradores" store=store ignoredProperties="persona,tipoColaborador,especialidad,campanhasColaboradores"}}
              </div>
            </div>
            <div class="col-lg-6">
              <label class="form-label"  for="nombre">Destino</label>
              {{input  type="text" value=lugar class="form-control" placeholder="Destino"}}
            </div>
          </div>


          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Generar Reporte</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
