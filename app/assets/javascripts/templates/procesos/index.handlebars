<h3>
  <i class="fa fa-angle-right"></i>
  Procesos de producci√≥n
  {{#link-to 'procesos.new'}}
    <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;" ></button>
  {{/link-to}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="content-panel table-responsive" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Descripcion</th>
                <th>Cantidad</th>
                <th>Estado</th>
                <th  style="width:11%;"></th>
            </tr>
        </thead>
        <tbody>
        {{#each}}
            <tr>
                <td>{{producto.descripcion}}</td>
                <td>{{descripcion}}</td>
                <td>{{cantidad}}</td>
                <td>{{estado}}</td>
                <td>
                  {{#link-to 'proceso.edit' this classNames='table-action'}}
                    <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil" ></button>
                  {{/link-to}}
                  {{#if isVigente}}
                    {{#link-to 'proceso.delete' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-remove" 
                              data-toggle="modal" data-target="#procesoDelete" ></button>
                    {{/link-to}}
                  {{/if}}
                </td>
            </tr>
        {{/each}}
         </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>