<h3>
  <i class="fa fa-angle-right"></i>
  Cotizaciones
  {{#link-to 'cotizaciones.new'}}
    <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
  {{/link-to}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="table-responsive content-panel" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Fecha</th>
                  <th>Moneda</th>
                  <th>Moneda Base</th>
                  <th>Monto</th>
                  <th>Usuario</th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{datetimeformat fechaHora}}</td>
                  <td>{{moneda.nombre}}</td>
                  <td>{{monedaBase.nombre}}</td>
                  <td>{{monto}}</td>
                  <td>{{usuario.nombre}}</td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>