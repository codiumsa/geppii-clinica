<h3>
  <i class="fa fa-angle-right"></i>
  Lotes por Depósito
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="content-panel table-responsive" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Deposito</th>
                  <th>Código de Barra</th>
                  <th>Producto</th>
                  <th>Lote</th>
                  <th>Existencia</th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{deposito.nombre}}</td>
                  <td>{{lote.producto.codigoBarra}}</td>
                  <td>{{lote.codigoLote}} {{lote.fechaVencimiento}}</td>
                  <td>{{existencia}}</td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>