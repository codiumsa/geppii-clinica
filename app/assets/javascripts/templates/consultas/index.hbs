<h3>
  <i class="fa fa-angle-right"></i>
  Consultas
  {{#isAuthorized 'FE_post_consultas'}}

    {{#link-to 'consultas.new'}}
      <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
    {{/link-to}}
  {{/isAuthorized}}


</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="table-responsive content-panel" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Fecha</th>
                  <th>Especialidad</th>
                  <th>Doctor</th>
                  <th>Paciente</th>
                  <th>Estado</th>

                  <th style="width:16%;"></th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{dateformat fechaAgenda}}</td>
                  <td>{{especialidad.descripcion}}</td>
                  <td>{{colaborador.persona.razonSocial}}</td>
                  <td>{{paciente.infoPaciente}}</td>
                  <td>{{estado}}</td>

                  <td class="center">
                    {{#isAuthorized "FE_put_consultas"}}
                      {{#link-to 'consulta.edit' this (query-params accion="editar" ) classNames='table-action'}}
                        <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil"></button>
                      {{/link-to}}

                      {{#link-to "consulta.edit" this (query-params accion="atender" )}}
                        <button class="btn btn-theme01 btn-sm glyphicon glyphicon-ok"></button>
                      {{/link-to}}
                    {{/isAuthorized}}
                    {{#isAuthorized "FE_delete_consultas"}}
                      {{#link-to 'consulta.delete' this classNames='table-action'}}
                        <button class="btn btn-theme btn-sm glyphicon glyphicon-remove"
                                data-toggle="modal" data-target="#consultaDelete"></button>
                      {{/link-to}}
                    {{/isAuthorized}}
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>
