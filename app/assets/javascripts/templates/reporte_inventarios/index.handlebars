<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "search" on="submit"}}>
          <div class="form-group"> 
            <div class="col-lg-4">                
              <label for="changePass">Control de Inventario</label>
              {{input type="checkbox" checked=controlInventario class="checkbox"}}
            </div>
            <div class="col-lg-4">
            {{#if control}}
               <label class="form-label" for="inventarios">Inventarios</label>
                {{view Bodega.FocusSelect content=inventariosTemp 
                optionValuePath="content.id" 
                selection=selectedInventario
                optionLabelPath="content.descripcion"
                classNames="form-control"
                }}
            {{else}}
              <label class="form-label" for="inventarios">Inventarios</label>
                {{view Bodega.FocusSelect content=inventariosTemp 
                optionValuePath="content.id" 
                selection=selectedInventario
                optionLabelPath="content.descripcion"
                classNames="form-control"
                prompt="Todos"}}
            {{/if}} 
            </div>  
            <div class="col-lg-4">
               <label class="form-label" for="depositos">Depósito</label>
                {{view Bodega.FocusSelect content=depositos 
                optionValuePath="content.id" 
                selection=selectedDeposito
                optionLabelPath="content.nombre"
                classNames="form-control"
                prompt="Seleccione un Depósito"}}
            </div>

          </div>
          
          <label class="form-label" for="fecha">Fecha de inicio</label>    
          <div class="form-group">
            <div class="col-md-4">
              {{view Bodega.views.DatePickerView value=fecha_inicio_despues nullable=true placeholder="Después de"}}
            </div>
            <div class="col-md-4">
              {{view Bodega.views.DatePickerView value=fecha_inicio_dia nullable=true placeholder="Día"}}
            </div>
            <div class="col-md-4"}>
              {{view Bodega.views.DatePickerView value=fecha_inicio_antes nullable=true placeholder="Antes de" }}
            </div>
          </div>

          <label class="form-label" for="fecha">Fecha de fin</label>    
          <div class="form-group">
           <div class="col-md-4">
              {{view Bodega.views.DatePickerView value=fecha_fin_despues nullable=true placeholder="Después de"}}
            </div>  
            <div class="col-md-4">
              {{view Bodega.views.DatePickerView value=fecha_fin_dia nullable=true placeholder="Día"}}
            </div>
            <div class="col-md-4"}>
              {{view Bodega.views.DatePickerView value=fecha_fin_antes nullable=true placeholder="Antes de" }}
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Generar Reporte</button>
            </div>
          </div>
        </form>
      </div>     
    </div>
  </div>
</div>
