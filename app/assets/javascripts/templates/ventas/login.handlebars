{{#custom-modal title='Autenticación de Usuario' close='removeModal' clazz='modal-dialog login-venta'}}
  <form class="form-login" role="form" autocomplete="on" {{action 'checkCredenciales' on="submit"}} style="margin:0px;">
    <div class="login-wrap">
      <div class="form-group" {{bind-attr class="errorMessage:has-error errorMessage:has-feedback"}}>
          <label class="form-label">Usuario o Email</label>
          {{focus-input type="text" id="username" value=identification class="form-control" placeholder="Usuario o Email" action="checkCredenciales"}}
          {{#if errorMessage}}
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          {{/if}}
      </div>
      <div class="form-group" {{bind-attr class="errorMessage:has-error errorMessage:has-feedback"}}>
          <label class="form-label">Contraseña</label>
          {{input type="password" id="password" value=password class="form-control" placeholder="Contraseña"}}
          <span class="help-block">{{errorMessage}}</span>
          {{#if errorMessage}}
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
          {{/if}}
      </div>     
    <br>

      <div class="form-group">  

          <button type="submit" class="btn btn-theme btn-block" ><i class="fa fa-lock"></i> Aceptar</button>

      </div>

    </div>
  </form>
{{/custom-modal}}