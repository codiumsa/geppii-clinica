<div class="form-group">
  <!--Inicio SecciÃ³n Datos Generales de la venta -->
  <!-- Pagado/No Pagado -->


  <div class="col-lg-3" {{bind-attr class="errors.cliente:has-error errors.cliente:has-feedback feedback.clienteRequerido:has-error feedback.clienteRequerido:has-feedback"}}>
      <label class="form-label">Razon Social</label>
        {{#if editando}}
          {{input type="text" value=persona.razonSocial class="form-control" disabled="true"}}
        {{else}}
          {{input type="text" value=nombreEmpresa class="form-control" placeholder="Nombre" readonly=true }}
            <span class="help-block">{{feedback.clienteRequerido}}</span>
            {{#if feedback.clienteRequerido}}
              <span class="glyphicon glyphicon-remove form-control-feedback"></span>
            {{/if}}
        {{/if}}
  </div>
  <div class="col-lg-3">
    <label class="form-label">Voluntario</label>
    {{#if editando}}
      {{input type="text" value=colaborador.razonSocial class="form-control" disabled="true"}}
    {{else}}
      <div class="search-input-width">
      {{search-input type="text"
      value=colaboradorLabel
      selectedItem=colaboradorSeleccionado
      class="form-control"
      placeholder="Voluntario"
      property="razonSocial"
      session=session service="colaboradores"
      modelType="colaborador"
      jsonRoot="colaboradores"
      store=store
      ignoredProperties="persona,tipoColaborador,especialidad,campanhasColaboradores"
      queryScope="by_persona"}}
      </div>
    {{/if}}
  </div>
  <div class="col-lg-3">
    <label class="form-label">Consultorio</label>
    {{#if editando}}
      {{input type="text" value=consultorio.descripcion class="form-control" disabled="true"}}
    {{else}}
      {{view Ember.Select content=consultorios optionLabelPath="content.descripcion" selection=consultorioSeleccionado value=consultorioSeleccionado classNames="form-control" }}
    {{/if}}
  </div>
</div>
