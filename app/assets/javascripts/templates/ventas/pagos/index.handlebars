<h3>
  <i class="fa fa-angle-right"></i>
  Pagos 
{{#if pagoHabilitado}}
	{{!-- {{#isAuthorized 'FE_post_pagos'}} --}}
        <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" {{action "irANuevo"}} style="margin-top: -5px; margin-left: 5px;"></button>
	{{!-- {{/isAuthorized}} --}}
  {{/if}}

</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="table-responsive content-panel" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Fecha Registro</th>
                  <th>Total</th>
                  <th>Descuento</th>
                  <th>Estado</th>
									<th>Descuento: Usuario Solicitud - Usuario Aprobación</th>
                  <th style="width:11%;"></th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{dateformat fechaPago}}</td>
                  <td>{{formatNumber total}}</td>
                  <td>{{formatNumber descuento}}</td>
                  <td>{{estado}}</td>
									<td>{{usuarioSolicitudDescuento.username}} -- {{usuarioAprobacionDescuento.username}}</td>
                  <td class="center">
										{{!--{{#isAuthorized 'FE_put_pagos'}}--}}
                        <button class="btn btn-theme btn-sm glyphicon glyphicon-usd" {{action "irAEditar" this}}></button>
										{{!--{{/isAuthorized}}--}}

										{{!--#isAuthorized 'FE_delete_pagos'--}}
                        <button {{action 'irAEliminar' this}} class="btn btn-theme btn-sm glyphicon glyphicon-remove" 
                                data-toggle="modal" data-target="#pagoDelete"></button>
										{{!--/isAuthorized--}}
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
    <div class="form-group">
			{{#if desdeCompra}}
				<div class="col-lg-12">

					<button class="btn btn-theme" {{action "irACompra"}} title= 'Volver a la compra'> Atrás </button>
				</div>
			{{/if}}
			{{#if desdeVenta}}
				<div class="col-lg-12">

					<button class="btn btn-theme" {{action "irAVenta"}} title= 'Volver a la venta'> Atrás </button>
				</div>
			{{/if}}
    </div>
  </div>
</div>