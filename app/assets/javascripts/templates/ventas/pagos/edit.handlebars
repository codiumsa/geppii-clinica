    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "save" on="submit"}} onkeydown="Bodega.keydownFormHandler('controller:pagos.edit', 'save');">

          <div class="form-group">
            <div class="col-lg-3" {{bind-attr class="errors.descripcion:has-error errors.descripcion:has-feedback"}}>
              <label class="form-label"  for="fechaPago">Fecha Pago</label>
              {{view Bodega.views.DatePickerView value=fechaPago readonly = "true"}}
            </div>

            <div class="col-lg-3" {{bind-attr class="feedback.positivo:has-error feedback.positivo:has-feedback"}}>
              <label class="form-label"  for="total">Total Cuotas</label>
              {{number-field min="0" readonly="true" number=totalMonedaSeleccionada class="form-control" placeholder="Total" }}
            </div>
						
						<div class="col-lg-3" {{bind-attr class="errors.descuento:has-error errors.descuento:has-feedback"}}>
								<label for="descuentoGastosCobranza">Descuento</label>
								{{number-field readonly="true" min="0" number=descuentoMonedaSeleccionada class="form-control" focus-out="controlarDescuento" }}
						</div>

            
            <div class="col-lg-3">
              <label class="form-label"  for="totalAPagar">Total a pagar</label>
              {{number-field min="0" readonly="true" number=totalAPagar class="form-control" disabled=true}}
            </div>
  
          </div>

