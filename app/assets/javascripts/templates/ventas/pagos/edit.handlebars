          <div class="form-group">
            <div class="col-lg-12">
							{{#ifEquals 'estado' 'Descuento Solicitado'}}
								<button {{action 'aprobarDescuento'}} class="btn btn-theme">Aprobar descuento</button>
								<button {{action 'cancelarDescuento'}} class="btn btn-theme">Rechazar descuento</button>
							{{else}}
                {{#ifEquals 'estado' 'Concretado'}}
                  <button type="submit" class="btn btn-theme" disabled = true>Confirmar Pago</button>
                  {{#ifEquals 'desde' 'ventas'}}
                    <button type="submit" class="btn btn-theme">Guardar y reimprimir Recibo</button>
                  {{/ifEquals}}
                {{else}}
                  <button type="submit" class="btn btn-theme">Confirmar Pago</button>
                {{/ifEquals}}	
							{{/ifEquals}}
              <button {{action 'cancel'}} class="btn btn-default ">Cancelar</button>
            </div>
