<div class="modal fade" id="ventaSearchForm">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" {{action "noop"}}  data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Filtros</h4>
      </div>
      <div class="modal-body">
          <div class="form-horizontal">
            <form class="style-form" role="form">
              <div class="form-group">
                <div class="col-lg-12">
                    <label class="form-label"  for="nombre_cliente">Nombre del cliente</label>
                    {{focus-input type="text" value=nombreCliente class="form-control" placeholder="Nombre del cliente"}}
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-12">
                    <label class="form-label"  for="apellido_cliente">Apellido del cliente</label>
                    {{input type="text" value=apellidoCliente class="form-control" placeholder="Apellido del cliente"}}
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-4">
                    <label class="form-label"  for="ruc_cliente">RUC del cliente</label>
                    {{input type="text" value=rucCliente class="form-control" placeholder="RUC del cliente"}}
                </div>
                <div class="col-lg-4">
                    <label class="form-label"  for="nro_factura">Nro. Factura</label>
                    {{input type="text" value=nroFactura class="form-control" placeholder="Nro. de Factura"}}
                </div>
              {{#if mostrarImei}}
                <div class="col-lg-4">
                  <label class="form-label"  for="imei">IMEI</label>
                  {{input type="text" value=imei class="form-control" placeholder="IMEI"}}
                </div>
              {{/if}}
              </div>
              {{!-- 
            <!--<div class="form-group">    
              <div class="col-lg-12">
                 <label class="form-label" for="sucursales">Sucursal</label>
                  {{view Ember.Select content=sucursales 
                  optionValuePath="content.id" 
                  selection=selectedSucursal
                  optionLabelPath="content.descripcion"
                  classNames="form-control"
                  prompt="Seleccione una Sucursal"}}
              </div>
            </div>-->
            --}}
              <div class="form-group" style="margin-bottom: 0px;">
                <div class="col-md-4">
                  <label class="form-label" for="fecha">Fecha de venta</label>
                </div>
              </div>  
              <div class="form-group">                
                <div class="col-md-4">
                  {{view Bodega.views.DatePickerView value=fechaDespues nullable=true placeholder="Después de"}}
                </div>
                <div class="col-md-4">
                  {{view Bodega.views.DatePickerView value=fechaDia nullable=true placeholder="Día"}}
                </div>
                <div class="col-md-4">
                  {{view Bodega.views.DatePickerView value=fechaAntes nullable=true placeholder="Antes de" }}
                </div>
              </div>
            </form>
          </div>     
      </div>
      <div class="modal-footer">
        <button type="button" {{action "criteriaSearch"}} class="btn btn-theme codium-search-btn" data-dismiss="modal" autofocus>Buscar</button>
        <button type="button" {{action "clearFilters"}} class="btn btn-default" data-dismiss="modal">Limpiar Filtros</button>
        <button type="button" {{action "noop"}} class="btn btn-default codium-cancel-btn" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>
