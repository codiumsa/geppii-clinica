<h3>
  <i class="fa fa-angle-right"></i>
  Control de Inventarios
  {{#link-to 'controlInventarios.new'}}
    <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
  {{/link-to}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="content-panel table-responsive" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Fecha de inicio</th>
                  <th>Fecha de fin</th>
                  <th>Usuario</th>
                  <th>Depósito</th>
                  <th>Descripción</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              {{#if correcto}}
              <tr>
              {{else}}
              <tr class="danger">
              {{/if}}
                  <td>{{dateformat fechaInicio}}</td>
                  <td>{{dateformat fechaFin}}</td>
                  <td>{{usuario.nombre}}</td>
                  <td>{{deposito.nombre}}</td>
                  <td>{{descripcion}}</td>
                  <td class="center">
                    {{#link-to 'controlInventario.edit' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil"></button>
                    {{/link-to}}
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>