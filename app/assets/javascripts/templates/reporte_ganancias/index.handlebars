<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "search" on="submit"}}>
          <div class="form-group">    
            <div class="col-lg-12">
               <label class="form-label" for="sucursales">Sucursal</label>
                {{view Bodega.FocusSelect content=sucursales 
                optionValuePath="content.id" 
                selection=selectedSucusal
                optionLabelPath="content.descripcion"
                classNames="form-control"
                prompt="Seleccione una Sucursal"}}
            </div>
          </div>
          
          <label class="form-label" for="fecha">Fecha de inicio</label>    
          <div class="form-group">
            <div class="col-md-4">
              {{view Bodega.views.DatePickerView value=fecha_registro_despues nullable=true placeholder="Después de"}}
            </div>
            <div class="col-md-4">
              {{view Bodega.views.DatePickerView value=fecha_registro_dia nullable=true placeholder="Día"}}
            </div>
            <div class="col-md-4"}>
              {{view Bodega.views.DatePickerView value=fecha_registro_antes nullable=true placeholder="Antes de" }}
            </div>
          </div>


          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Generar Reporte</button>
            </div>
          </div>
        </form>
      </div>     
    </div>
  </div>
</div>
