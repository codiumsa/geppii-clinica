<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "save" on="submit"}} onkeydown="Bodega.keydownFormHandler('controller:categoriaOperaciones.new', 'save');">
          <div class="form-group">
            <div class="col-lg-6" {{bind-attr class="errors.nombre:has-error errors.nombre:has-feedback"}}>
              <label class="form-label"  for="nombre">Nombre</label>
              {{focus-input type="text" value=nombre class="form-control" placeholder="Nombre" autofocus="autofocus"}}
              <span class="help-block">{{error errors.nombre}}</span>
              {{#if errors.nombre}}
              <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              {{/if}}
            </div>

            <div class="col-lg-6" {{bind-attr class="errors.descripcion:has-error errors.descripcion:has-feedback"}}>
              <label class="form-label"  for="descripcion">Descripción</label>
              {{input type="text" value=descripcion class="form-control" placeholder="Descripción de la categoría"}}
              <span class="help-block">{{error errors.descripcion}}</span>
              {{#if errors.descripcion}}
                <span class="glyphicon glyphicon-remove form-control-feedback"></span>
              {{/if}}   
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-6 taginputsimple" {{bind-attr class="errors.tipo_operacion:has-error errors.tipo_operacion:has-feedback"}}>
              <label class="form-label">Tipo Operación</label>
              {{view Ember.Select
                content=tipoOperaciones
                optionLabelPath="content.descripcion"
                selection=tipoOperacionSeleccionada
                value=tipoOperacionSeleccionada
                classNames="form-control"}}
              {{#if errors.tipo_operacion}}
                  <span class="glyphicon glyphicon-remove form-control-feedback form-control-feedback-adjusted"></span>
              {{/if}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Guardar</button>
              <button {{action 'cancel'}} class="btn btn-default">Cancelar</button>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
