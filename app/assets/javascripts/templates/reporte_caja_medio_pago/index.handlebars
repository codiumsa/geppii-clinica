<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "search" on="submit"}}>
          
					<div class="form-group">
            <div class="col-lg-7">
             <label class="form-label" for="cajas">Caja</label>
              {{view Bodega.FocusSelect 
              content=cajas 
              optionValuePath="content.id" 
              selection=selectedCaja
              optionLabelPath="content.descripcion"
              classNames="form-control"
              prompt="Seleccione una Caja"
              }}
            </div>
          </div>
          <label class="form-label" for="fecha">Fecha de Movimiento</label>    
          <div class="form-group">
            <div class="col-md-4">
              {{view Bodega.views.DatePickerView value=fecha_despues nullable=true placeholder="Después de"}}
            </div>
            <div class="col-md-4">
              {{view Bodega.views.DatePickerView value=fecha_dia nullable=true placeholder="Día"}}
            </div>
            <div class="col-md-4"}>
              {{view Bodega.views.DatePickerView value=fecha_antes nullable=true placeholder="Antes de" }}
            </div>            
          </div>  
          
          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Generar Reporte</button>
            </div>
          </div>          
        </form>
      </div>     
    </div>
  </div>
</div>

