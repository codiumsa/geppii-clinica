<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "search" on="submit"}}>
          <div class="form-group">
            <div class="col-lg-4">
                <label class="form-label"  for="ruc_cliente">RUC del cliente</label>
                {{input type="text" value=ruc_cliente class="form-control" placeholder="RUC del cliente"}}
            </div>
            <div class="col-lg-4">
               <label class="form-label" for="sucursales">Sucursal</label>
                {{view Ember.Select content=sucursales 
                optionValuePath="content.id" 
                selection=selectedSucusal
                optionLabelPath="content.descripcion"
                classNames="form-control"
                prompt="Seleccione una Sucursal"}}
            </div>
            {{#if soportaMultimoneda}}
              <div class="col-lg-4">
                 <label class="form-label" for="monedas">Moneda</label>
                  {{view Ember.Select content=monedas 
                  optionValuePath="content.id" 
                  selection=selectedMoneda
                  optionLabelPath="content.simbolo"
                  classNames="form-control"
                  prompt="Seleccione una Moneda"}}
              </div>
            {{/if}}
          </div>          
          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Generar Reporte</button>
            </div>
          </div>
        </form>
      </div>     
    </div>
  </div>
</div>