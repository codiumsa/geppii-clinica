<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "search" on="submit"}}>
          <div class="form-group">    
						<div class="col-lg-4">
             <label class="form-label" for="depositos">Deposito</label>
              {{view Bodega.FocusSelect content=depositos 
              optionValuePath="content.id" 
              selection=selectedDeposito
              optionLabelPath="content.nombre"
              classNames="form-control"
              prompt="Seleccione un Deposito"}}
            </div>

            <div class="col-lg-2">                
              <label for="changePass">Incluir productos fuera de stock</label>
              {{input type="checkbox" checked=incluyeCero class="checkbox"}}
            </div>

            <div class="col-lg-4">
              <label class="form-label" for="categorias">Categorías</label>
              {{view Bodega.FocusSelect content=categorias 
              optionValuePath="content.id" 
              selection=selectedCategoria
              optionLabelPath="content.nombre"
              classNames="form-control"
              prompt="Seleccione una Categoría"}}
            </div>

          </div>

          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Generar Reporte</button>
            </div>
          </div>
        </form>
      </div>     
    </div>
  </div>
</div>

