<h3>
  <i class="fa fa-angle-right"></i>
  Tipos de Producto
  {{#link-to 'tipoProductos.new'}}
    <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
  {{/link-to}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="table-responsive content-panel" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Descripción</th>
                  <th>Código</th>
                  <th>Usa lote</th>
                  <th>Procedimiento</th>
                  <th>Especialidad</th>
                  <th>Maneja Stock</th>
                  <th>OSI</th>
                  <th style="width:11%;"></th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{descripcion}}</td>
                  <td>{{codigo}}</td>
                  <td>{{yesno usaLote}}</td>
                  <td>{{yesno procedimiento}}</td>
                  <td>{{yesno especialidad}}</td>
                  <td>{{yesno stock}}</td>
                  <td>{{yesno productoOsi}}</td>
                  <td class="center">
                    {{#link-to 'tipoProducto.edit' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil"></button>
                    {{/link-to}}
                    {{#link-to 'tipoProducto.delete' this classNames='table-action'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-remove"
                              data-toggle="modal" data-target="#tipoProductoDelete"></button>
                    {{/link-to}}
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>
