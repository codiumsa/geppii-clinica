<h3>
  <i class="fa fa-angle-right"></i>
  Vendedores
  {{#link-to 'vendedores.new'}}
    <button class="btn btn-theme btn-sm glyphicon glyphicon-plus" style="margin-top: -5px; margin-left: 5px;"></button>
  {{/link-to}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    {{view Bodega.views.FilterView}}
    <div class="table-responsive content-panel" style="padding: 0px;">
      <table class="table table-bordered table-striped table-condensed">
          <thead>
              <tr>
                  <th>Nombre</th>
                  <th>Apellido</th>
                  <th>Dirección</th>
                  <th>Teléfono</th>
                  <th>Email</th>
                  <th>Comisión</th>
                  <th style="width:11%;"></th>
              </tr>
          </thead>
          <tbody>
          {{#each}}
              <tr>
                  <td>{{nombre}}</td>
                  <td>{{apellido}}</td>
                  <td>{{direccion}}</td>
                  <td>{{telefono}}</td>
                  <td>{{email}}</td>
                  <td>{{comision}}</td>
                  <td class="center">
                    {{#link-to 'vendedor.edit' this classNames='table-action'}}
                      {{#isAuthorized 'FE_put_vendedores'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-pencil"></button>
                      {{/isAuthorized}}
                    {{/link-to}}
                    {{#link-to 'vendedor.delete' this classNames='table-action'}}
                      {{#isAuthorized 'FE_put_vendedores'}}
                      <button class="btn btn-theme btn-sm glyphicon glyphicon-remove" 
                              data-toggle="modal" data-target="#vendedorDelete"></button>
                      {{/isAuthorized}}
                    {{/link-to}}
                  </td>
              </tr>
          {{/each}}
          </tbody>
      </table>
    </div>
    {{view Bodega.views.PaginationView}}
  </div>
</div>