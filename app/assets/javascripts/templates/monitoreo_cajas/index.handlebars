<h3>
  <i class="fa fa-angle-right"></i>
  Monitoreo de Cajas

</h3>
<div class="row mt">
	<div class="col-lg-12">
		<!--		{{view Bodega.views.FilterView}}-->
		<div class="content-panel table-responsive" style="padding: 0px;">
			<table class="table table-bordered table-striped table-condensed">
				<thead>
					<tr>
						<th>Código</th>
						<th>Descripción</th>
						<th>Tipo</th>
						<th>Saldo</th>
						<th>Límite</th>
						<th>Excedente</th>

					</tr>
				</thead>
				<tbody>
					{{#each}} 
						{{#if necesitaAlivio}}
							<tr class="danger">
						{{else}}
							<tr>
						{{/if}}
							<!--					<tr>-->
						<td>{{codigo}}</td>
						<td>{{descripcion}}</td>
						<td>{{tipo}}</td>
						<td>{{saldo}}</td>
						<td>{{limiteAlivio}}</td>
						<td>{{excedente}}</td>
						</tr>
						{{/each}}
				</tbody>
			</table>
		</div>
		<!--		{{view Bodega.views.PaginationView}}-->
	</div>
</div>
