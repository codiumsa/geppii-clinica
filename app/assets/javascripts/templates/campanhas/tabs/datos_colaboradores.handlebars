<div role="tabpanel" class="tab-pane" id="datoscolaboradores">
	<div class="row mt">
		<div class="col-lg-12">
			<div class="content-panel table-responsive" style="padding: 0px;">
				<table class="table table-bordered table-striped table-condensed">
					<thead>
						<tr>
							<th>CI</th>
							<th>Nombre</th>
							<th>Voluntario</th>
							<th>Tipo</th>
							<th>Especialidad</th>
							<th>Observaciones</th>
							<th style="width: 10%;"></th>
						</tr>
					</thead>
					<tbody>
						{{#each colab in campanhasColaboradores}}
						<tr>
							<td>{{colab.colaborador.persona.ciRuc}}</td>
							<td>{{colab.colaborador.persona.razonSocial}}</td>
							<td>{{yesno colab.colaborador.voluntario}}</td>
							<td>{{colab.colaborador.tipoColaborador.nombre}}</td>
							<td>{{colab.colaborador.especialidad.descripcion}}</td>
							<td>{{colab.observaciones}}</td>
							<td class="center">
								{{#link-to 'colaborador.edit' colab.colaborador classNames='table-action'}}
								<button class="btn btn-theme btn-sm glyphicon glyphicon-pencil"></button>
								{{/link-to}}
							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-12">
			<button type="submit" class="btn btn-theme">Guardar</button>
			<button {{action 'cancel'}} class="btn btn-default">Cancelar</button>
		</div>
	</div>
</div>
