<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "search" on="submit"}}>

          <div class="form-group">
            <div class="col-lg-4">
              <label class="form-label">Candidato a:</label>
              {{view Ember.Select
                content=medianteOptions
                optionValuePath="content.id"
                optionLabelPath="content.descripcion"
                selection=medianteSeleccionado
                value=medianteDefault.id
                classNames="form-control"}}
            </div>


            {{#if medianteMision}}
              <div class="col-lg-4">
                <label class="form-label">Misión</label>
                {{view Ember.Select
                  content=campanhas
                  optionValuePath="content.id"
                  optionLabelPath="content.nombre"
                  selection=campanhaSeleccionada
                  value=campanhaDefault.id
                  classNames="form-control"}}
              </div>
            {{/if}}
            {{!-- {{#if medianteClinica}}
              <div class="col-lg-6" {{bind-attr class="feedback.fechaPosible:has-error feedback.fechaPosible:has-feedback" }}>
                <label class="form-label" for="fechaPosible">Fecha</label>
                {{view Bodega.views.DatePickerView value=fechaPosible}}
                <span class="help-block">{{error feedback.fechaPosible}}</span>
                {{#if feedback.fechaPosible}}
                  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                {{/if}}
              </div>
            {{/if}} --}}
          </div>
            <label class="form-label" for="fecha">Rango de fechas</label>
              <div class="form-group">
                <div class="col-md-4">
                  {{view Bodega.views.DatePickerView value=fecha_inicio_despues nullable=true placeholder="Después de"}}
                </div>
                <div class="col-md-4">
                  {{view Bodega.views.DatePickerView value=fecha_inicio_dia nullable=true placeholder="Día"}}
                </div>
                <div class="col-md-4"}>
                  {{view Bodega.views.DatePickerView value=fecha_inicio_antes nullable=true placeholder="Antes de" }}
                </div>
              </div>



          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Generar Reporte</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
