<div class="panel panel-default" style="margin-top: 15px;">
    <div class="panel-heading">
        <h4 class="panel-title">
      <a data-toggle="collapse" data-parent="#subaccordion"
	 href="#planTratamiento"><i class="fa fa-angle-right">
	 </i>PlanTratamiento</a>
    </h4>
    </div>
    <div id="planTratamiento" class="panel-collapse collapse">
        <div class="panel-body">
            <div class="form-group">
                <!-- INICIO LISTA DETALLES -->
                <div class="panel-body">
                    <div class="form-horizontal form-detalles">
                        <!-- DETALLE NUEVO -->
                        <div class="col-md-2">
                            <label class="form-label" for="fecha">Diente</label> {{view Ember.Select content=listaDientes selection=detNuevo.referenciaId value=detNuevo.referenciaId optionValuePath="content.id" optionLabelPath="content.nombre" prompt="Seleccione
                            un valor..." classNames="form-control"}}
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Descripción</label>
                            <div class="search-input-width">
                                {{search-input type="text" value=descripcionSW selectedItem=productoSeleccionadoSW class="form-control" placeholder="Descripción del tratamiento" property="descripcion" session=session service="productos" modelType="producto" jsonRoot="productos" store=store
                                queryScope=queryScopeTratamientos ignoredProperties="producto,productoDetalles,lotes,categorias,promocionProducto,tipoProducto,especialidad,moneda" }}
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Estado</label> {{view Bodega.views.GeppiiSelect content=estadosTratamiento selection=detNuevo.estado value=detNuevo.estado optionValuePath="content" prompt="Seleccione un valor..." classNames="form-control"}}
                        </div>
                        <div class="col-md-2" }>
                            <label class="form-label">Inicio Tratamiento</label> {{view Bodega.views.DatePickerView value=detNuevo.fechaInicio nullable=true placeholder="Inicio" }}
                        </div>
                        <div class="col-md-2" }>
                            <label class="form-label">Fin Tratamiento</label> {{view Bodega.views.DatePickerView value=detNuevo.fechaFin nullable=true placeholder="Fin" }}
                        </div>
                        <div class="col-lg-1">
                            <label class="form-label">Agregar</label>
                            <button type="button" {{action 'agregarDetalle'}} class="btn btn-theme btn-sm" onkeydown="Bodega.enterFormHandler('controller:fichasOdontologia.new',
				 'agregarTratamiento');">
                                <span class="glyphicon glyphicon-plus"></span>
                                </button>
                        </div>
                        <!-- FIN DETALLE NUEVO-->
                    </div>

                      <div class="panel-body">
                        <div class="form-horizontal form-detalles">
                          <div class="row">
                            <div class="col-md-12">
                              <div class="content-panel">
                                <h4>Detalles</h4>
                                <hr>
                                <table class="table table-striped table-advance table-hover">
                                  <thead>
                                    <tr>
                                      <th>Diente</th>
                                      <th>Tratamiento</th>
                                      <th>Estado</th>
                                      <th>Inicio</th>
                                      <th>Fin</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                    {{#each item in detalles}}
                                      <tr>
                                        <td> {{item.referenciaId}} </td>
                                        <td> {{item.producto.descripcion}} </td>
                                        <td> {{item.estado}} </td>
                                        <td> {{dateformat item.fechaInicio}} </td>
                                        <td> {{dateformat item.fechaFin}} </td>
                                          <td>
                                            <button type="button" {{action 'borrarDetalle' item 'tratamientos' 'tratamientos.@each.eliminado'}} class="btn btn-danger btn-xs"> <span class="glyphicon glyphicon-remove"></span>
                                            </button>
                                          </td>
                                      </tr>
                                    {{/each}}
                                  </tbody>
                                </table>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>

