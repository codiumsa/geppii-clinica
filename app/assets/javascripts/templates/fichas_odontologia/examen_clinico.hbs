<div class="panel panel-default" style="margin-top: 15px;">
  <div class="panel-heading">
    <h4 class="panel-title">
      <a data-toggle="collapse" data-parent="#accordion"
	 href="#examenClinico"><i class="fa fa-angle-right">
	 </i>Ex√°men Clinico</a>
    </h4>
  </div>
  <div id="examenClinico" class="panel-collapse collapse">
    <div class="panel-body">
      <div class="col-lg-12">
	<fieldset>
	  <legend>Tejidos Blandos</legend>	  
	  <div class="col-lg-6">
	    <label>Intraorales</label>
	    {{view Bodega.views.GeppiiSelect
	      content=tejidosBlandosIntraorales
	      selection=examenClinico.tejidosBlandos.intraorales
	      value=examenClinico.tejidosBlandos.intraorales
	      optionValuePath="content"
	      prompt="Seleccione un valor..."
	      classNames="form-control"}}
	  </div>
	  <div class="col-lg-6">
	    <label>Extraorales</label>
	    {{view Bodega.views.GeppiiSelect
	      content=tejidosBlandosExtraorales
	      selection=examenClinico.tejidosBlandos.extraorales
	      prompt="Seleccione un valor..."
	      value=examenClinico.tejidosBlandos.extraorales
	      optionValuePath="content"
	      classNames="form-control"}}
	  </div>
	</fieldset>
      </div>
      <div class="col-lg-4">
	<label>Ganglios</label>
	{{view Bodega.views.GeppiiSelect
	  content=gangliosLista
	  selection=examenClinico.ganglios
	  prompt="Seleccione un valor..."
	  value=examenClinico.ganglios
	  optionValuePath="content"
	  classNames="form-control"}}
      </div> 
      <div class="col-lg-4">
	<label>Aspecto Clinico General</label>
	{{view Bodega.views.GeppiiSelect
	  content=aspectosClinico
	  selection=examenClinico.aspectoClinicoGral
	  prompt="Seleccione un valor..."
	  value=examenClinico.aspectoClinicoGral
	  optionValuePath="content"
	  classNames="form-control"}}
      </div> 
      <span></span>
      <div class="col-lg-4">
	<label>Antecedentes de tratamiento dental</label>
	{{view Bodega.views.GeppiiSelect
	  content=antecedentesTratamientos
	  selection=examenClinico.antecedentesTratamientoDental
	  prompt="Seleccione un valor..."
	  value=examenClinico.antecedentesTratamientoDental
	  optionValuePath="content"
	  classNames="form-control"}}
      </div>
      
    </div>
  </div>
</div>
