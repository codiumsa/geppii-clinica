<h3>
  <i class="fa fa-angle-right"></i>
  {{formTitle}} {{compra.nroFactura}}
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form" {{action "save" on="submit"}}>
          <div class="form-group">
            <div class="col-lg-4">
              <label class="form-label"  for="nroCuota">Número de Cuota</label>
              {{input readonly="true" type="text" value=nroCuota class="form-control" }}
            </div>
            <div class="col-lg-4" >
              <label class="form-label"  for="fechaVencimiento">Fecha de Vencimiento</label>
              {{view Bodega.views.DatePickerView value=fechaVencimiento readonly=true}}
            </div>
            <div class="col-lg-4">
              <label class="form-label" for="monto">Monto</label>
              {{input readonly="true" type="text" value=monto class="form-control"}}
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-2" >
              <label for="cancelado">Cancelado</label>
              {{focus-checkbox checked=cancelado class="checkbox"}}
            </div>
            {{#if cancelado}}
              <div class="col-lg-6" >
                <label class="form-label"  for="nroRecibo">Número de recibo</label>
                {{input type="text" value=nroRecibo class="form-control" placeholder=numeral}}
              </div>

              <div class="col-lg-4">
                <label class="form-label"  for="fechaCobro">Fecha de Cobro</label>
                {{view Bodega.views.DatePickerView value=fechaCobro}}
              </div> 

            {{/if}}
            
          </div>
          
          <div class="form-group">
            <div class="col-lg-12">
              <button type="submit" class="btn btn-theme">Guardar</button>
              <button {{action 'cancel'}} class="btn btn-default">Cancelar</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
